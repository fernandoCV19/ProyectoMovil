<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.macchiato">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <application
        android:name="com.example.macchiato.Models.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="Macchiato"
        android:supportsRtl="true"
        android:theme="@style/Theme.Macchiato">
        <activity android:name=".Navigation_bottom"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity android:name=".Descargas_Externas"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name=".CambiarPerfilActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".HistorialAcademicoActivity"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity android:name=".RegisterActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".LogInActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".SplashScreenActivity"
            android:screenOrientation="portrait"
            android:allowBackup="true"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
